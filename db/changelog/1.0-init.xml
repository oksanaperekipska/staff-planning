            <column name="end_date" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="count" type="INTEGER"/>
            <column name="color_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <!--********* Data loading ********* -->

    <changeSet author="a.sidko" id="1615668829477-data-aircraft">
